{
    // 延伸模组：C/C++、Chinese (Traditional)、indent-rainbow、
    // Jupyter、Markdown Preview Enhanced、Monokai Pro、
    // Prettier - Code formatter、Python、Vim、Language-Cython

    // %APPDATA%\Code\User\settings.json
    // $HOME/.config/Code/User/settings.json
    "workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
    "workbench.iconTheme": "Monokai Pro (Filter Spectrum) Icons",
    "workbench.preferredDarkColorTheme": "Monokai Pro (Filter Machine)",
    "workbench.colorCustomizations": {
        // 滚动条
        "scrollbarSlider.background": "#ffffff66",
        "scrollbarSlider.hoverBackground": "#ffffff66",
        "scrollbarSlider.activeBackground": "#ffffff66",
        // 缩略滚动条
        "minimapSlider.background": "#ffffff88",
        "minimapSlider.hoverBackground": "#ffffff88",
        "minimapSlider.activeBackground": "#ffffff88",
        // 匹配括号
        "editorBracketMatch.background": "#00ff00"
    },
    "workbench.editor.wrapTabs": true,
    "workbench.editor.openPositioning": "first",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0.7,
    "python.linting.pylintEnabled": false,
    "python.linting.mypyEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=99",
        "--extend-ignore=E701,F403,E502,E731,E402"
    ],
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": ["--style={based_on_style: pep8}"],
    "python.terminal.launchArgs": [],
    "python.analysis.autoImportCompletions": false,
    "prettier.tabWidth": 4,
    "editor.formatOnSave": true,
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.fontLigatures": false,
    "editor.fontSize": 15,
    "editor.fontWeight": 500,
    "editor.lineNumbers": "on",
    "editor.cursorStyle": "line",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "editor.tabSize": 4,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[shellscript]": {
        "files.eol": "\n"
    },
    "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
    "terminal.integrated.inheritEnv": false,
    "terminal.external.windowsExec": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
    "terminal.integrated.profiles.windows": {
        "Raw PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "PowerShell": {
            "path": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
            "args": [
                "-ExecutionPolicy",
                "ByPass",
                "-NoExit",
                "-Command",
                "& 'D:\\Miniconda3\\shell\\condabin\\conda-hook.ps1' ; conda activate 'D:\\Miniconda3'"
            ],
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "files.associations": {
        "*.json": "jsonc"
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.eol": "\n",
    "remote.SSH.useLocalServer": true
}
